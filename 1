pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_VERSION = '1.29.2'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    // Установка Docker и Docker Compose
                    sh 'curl -fsSL https://get.docker.com/ | sh'
                    
                    // Установка Docker Compose без использования sudo
                    sh "curl -L https://github.com/docker/compose/releases/download/${DOCKER_COMPOSE_VERSION}/docker-compose-$(uname -s)-$(uname -m) -o $HOME/docker-compose"
                    sh 'chmod +x $HOME/docker-compose'
                    
                    // Добавление пути до установленного Docker Compose в PATH
                    sh 'export PATH=$HOME:$PATH'
                    
                    // Запуск Docker Compose для разворачивания сервисов
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Declarative: Post Actions') {
            post {
                always {
                    // Команды, выполняемые всегда после завершения пайплайна
                    script {
                        // Обновление пакетов в системе без использования sudo
                        sh 'apt-get update -qq'
                    }
                }
            }
        }
    }
}
